@model Category
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Category Detail</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label>Category Name</label>
                        <input asp-for="CategoryName" type="text" class="form-control" placeholder="Enter Category Name" value="@Model.CategoryName">
                    </div>
                    <div class="form-group">
                        <label>Category Description</label>
                        <input asp-for="Description" type="text" class="form-control" placeholder="Enter Description" value="@Model.Description">
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Update Category</button>
                </div>
            </form>
        </div>
    </div>
</div>

