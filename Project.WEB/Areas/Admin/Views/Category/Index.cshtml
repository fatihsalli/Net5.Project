@model IQueryable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    int sayi = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Category List</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-success">New Category</a>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Total Product</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td>@item.Status</td>
                                <td>@*@Model.Where(x=> x.CategoryId==1).AsQueryable().Count();*@</td>
                                <td>
                                    <a asp-action="Update" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-xs btn-warning">Update</a>
                                    <a asp-action="Delete" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-xs btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>